    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Hardhat Script",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/scripts/deploy.js",
            "args": [
                "run",
                "${workspaceFolder}/scripts/deploy.js"
            ],
            "runtimeArgs": [
                "--require",
                "hardhat/register"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "HARDHAT_NETWORK": "localhost" // Specify network
            }
        }
    ]
}